@model G_B.Models.VeiculoG_B

@{
    ViewBag.titulo = "Cadastrar Guindaste";
}



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>  <small>  </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form id="" data-parsley-validate class="form-horizontal form-label-left" action="@Url.Action("CadastrarGuindaste","VeiculoG_B")" method="post" enctype="multipart/form-data" novalidate>


                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tipo">
                            Tipo <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <select class="form-control" name="TipoVeiculo" id="TipoVeiculo" required >
                                <option value="" selected disabled>SELECIONE</option>
                                <option value="RODOVIÁRIO">RODOVIÁRIO</option>
                                <option value="NAO_RODOVIÁRIO">NAO RODOVIÁRIO</option>
                            </select>
                        </div>
                    </div>

                    <div style="display:none" id="RODOVIÁRIO">

                        RODOVIÁRIO
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tipo">
                                Especificacão <span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <select class="form-control" name="Especificacao" id="Especificacao" >
                                    <option value="" selected disabled>SELECIONE</option>
                                    <option value="TELESCOPICO">TELESCOPICO</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tipo">
                                Eixos <span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <select class="form-control" name="Eixo" id="Eixo" >
                                    <option value="" selected disabled>SELECIONE</option>
                                    <option value="3">3 Eixos</option>
                                    <option value="4">4 Eixos</option>
                                    <option value="5">5 Eixos</option>
                                    <option value="6">6 Eixos</option>
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                CIV <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                @Html.TextBox("fileCIV", "", new { type = "file", style = "color: #6aba8e;" }) <br />

                                @ViewBag.Message

                            </div>
                            @*<input type="submit" value="Pesquisar" class="col-md-3 col-sm-3 col-xs-3 " />*@
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                Vencimento CIV <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                <input type="date" id="VencimentoCIV" name="VencimentoCIV"  class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                AEts Federal <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                @Html.TextBox("fileFederal", "", new { type = "file", style = "color: #6aba8e;" }) <br />

                                @ViewBag.Message

                            </div>
                            @*<input type="submit" value="Pesquisar" class="col-md-3 col-sm-3 col-xs-3 " />*@
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                Vencimento Federal <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                <input type="date" id="VencimentoAETsFederal" name="VencimentoAETsFederal"  class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                AEts Estadual <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                @Html.TextBox("fileEstadual", "", new { type = "file", style = "color: #6aba8e;" }) <br />

                                @ViewBag.Message

                            </div>
                            @*<input type="submit" value="Pesquisar" class="col-md-3 col-sm-3 col-xs-3 " />*@
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3" for="Codigo">
                                Vencimento Estadual <span class="required"></span>
                            </label>
                            <div class="col-md-4">
                                <input type="date" id="VencimentoAETsEstadual" name="VencimentoAETsEstadual"  class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                    </div>

                    <div style="display:none" id="NAO_RODOVIÁRIO">
                        NAO_RODOVIÁRIO

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tipo">
                                Especificacão <span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <select class="form-control" name="Especificacao" id="Especificacao" >
                                    <option value="" selected disabled>SELECIONE</option>
                                    <option value="ESTEIRA_TRELIÇADO">ESTEIRA TRELIÇADO</option>
                                    <option value="SOBRE_PNEUS">SOBRE PNEUS</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tipo">
                                Eixos <span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <select class="form-control" name="Eixo" id="Eixo" >
                                    <option value="" selected disabled>SELECIONE</option>
                                    <option value="3">3 Eixos</option>
                                    <option value="4">4 Eixos</option>
            
                                </select>
                            </div>
                        </div>


                    </div>
            <!---------------------------------------------------------Generico-------------------------------------------------------------------------------------------->
                    <div class="form-group">
                        <label class="control-label col-md-3" for="Placa">
                            Placa <span class="required">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="Placa" name="Placa" required class="form-control col-md-4 col-xs-4">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3" for="Modelo">
                            Modelo <span class="required">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="Modelo" name="Modelo" required class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3" for="Codigo">
                            Código <span class="required"></span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="Codigo" name="Codigo"  class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3" for="AnoFabricacao">
                            Ano de Fabricação <span class="required"></span>
                        </label>
                        <div class="col-md-4">
                            <input type="number" id="AnoFabricacao" name="AnoFabricacao"  class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3" for="ConsumoMedioFabricante">
                            Consumo Médio Indicado Pelo Fabricante <span class="required"></span>
                        </label>
                        <div class="col-md-4">
                            <input type="number" id="ConsumoMedioFabricante" name="ConsumoMedioFabricante" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3" for="Horimetro">
                            Horimetro  <span class="required"></span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="Horimetro" name="Horimetro"  class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3" for="KmRodado">
                            Km Rodado  <span class="required"></span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="KmRodado" name="KmRodado"  class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary" type="reset">Reset</button>
                            <button type="submit" class="btn btn-success">Cadastrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    $('#TipoVeiculo').change(function (){
        var TipoVeiculo = $("#TipoVeiculo option:selected").val();
        if (TipoVeiculo == "RODOVIÁRIO") {

            document.getElementById("RODOVIÁRIO").style.display = 'block';
            document.getElementById("NAO_RODOVIÁRIO").style.display = 'none';
        }
        else {

            document.getElementById("RODOVIÁRIO").style.display = 'none';
            document.getElementById("NAO_RODOVIÁRIO").style.display = 'block';
        }
 });
</script>